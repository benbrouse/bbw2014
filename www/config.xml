<?xml version='1.0' encoding='utf-8'?>
<widget id="com.brewnotes.bbw" 
        versionCode = "VERSION-CODE"
        version="-VERSION"
        xmlns="http://www.w3.org/ns/widgets" 
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android">
  
    <name>APP-NAME</name>
    <description>
        The official Baltimore Beer Week companion application.
    </description>
    <author email="ben.brouse@brewnotes.com" href="http://brewnotes.com/">
        Baltimore Beer Week Team
    </author>
  
    <content src="index.html" />
    <access origin="*" />

    <gap:config-file platform="ios" parent="CFBundleShortVersionString">
      <string>VERSION-SHORT</string>
    </gap:config-file>

    <preference name="phonegap-version" value="3.5.0" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="permissions" value="none" />  

    <!-- Supported Platforms -->
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="winphone" />

    <!-- Core Plugins -->
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.7" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.8" />
    <gap:plugin name="org.apache.cordova.splashscreen" />

    <!-- iOS Configuration -->
    <preference name="target-device" value="handset" />

    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="2000" />

    <!-- Android Configuration -->
    <icon src="img/icons/android/icon-ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
    <icon src="img/icons/android/icon-mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
    <icon src="img/icons/android/icon-hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
    <icon src="img/icons/android/icon-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />

    <!-- iPhone / iPod Touch  -->
    <icon src="img/icons/ios/Icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icons/ios/Icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPhone / iPod Touch  -->
    <icon src="img/icons/ios/Icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="img/icons/ios/Icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="img/icons/ios/Icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="img/icons/ios/Icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="img/icons/ios/Icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="img/icons/ios/Icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="img/icons/ios/Icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="img/icons/ios/Icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iPhone and iPod touch -->
    <gap:splash src="img/icons/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/icons/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="img/icons/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPad -->
    <gap:splash src="img/icons/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="img/icons/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <gap:splash src="img/icons/ios/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="img/icons/ios/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />

    <!-- Android Splashscreens -->
    <gap:splash src="img/icons/android/port-ldpi.png" gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="img/icons/android/port-mdpi.png" gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="img/icons/android/port-hdpi.png" gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="img/icons/android/port-xhdpi.png" gap:platform="android" gap:qualifier="port-xhdpi" />
    <gap:splash src="img/icons/android/port-xxhdpi.png" gap:platform="android" gap:qualifier="port-xxhdpi" />

    <gap:splash src="img/icons/android/land-ldpi.png" gap:platform="android" gap:qualifier="land-ldpi" />
    <gap:splash src="img/icons/android/land-mdpi.png" gap:platform="android" gap:qualifier="land-mdpi" />
    <gap:splash src="img/icons/android/land-hdpi.png" gap:platform="android" gap:qualifier="land-hdpi" />
    <gap:splash src="img/icons/android/land-xhdpi.png" gap:platform="android" gap:qualifier="land-xhdpi" />
    <gap:splash src="img/icons/android/land-xxhdpi.png" gap:platform="android" gap:qualifier="land-xxhdpi" />

    <!-- Target OS versions 
    <preference name="deployment-target" value="7.0" />	-->    <!-- iOS MinimumOSVersion -->
    <preference name="android-minSdkVersion" value="16" />    <!-- Android 4.1 -->
</widget>
